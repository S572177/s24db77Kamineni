extends layout

block content
    h1= title
    p Welcome to #{title}

    
    - let items = results  

        div(class = "container-fluid")
            div(class="row")
                each item, index in results
                    div(class="col-sm-2" onclick=`buy(${index})`)
                        ul
                            li  #{item.Game}
                            li  #{item.no_of_players}
                            li  #{item.equipment}
                
                script.
                    function buy(index){
                        alert('You bought an item ' + index);
                    }